CC = icc

CFLAGS     = -g -O3 -xHost -fno-alias -std=c99 -qopenmp -I include

SRC_DIR 	= src
OBJ_DIR 	= obj
BIN_DIR 	= bin
INCLUDE_DIR = include

TIMING 	  = $(OBJ_DIR)/timing.o
UTILITIES = $(OBJ_DIR)/utilities.o
MODULES   = $(TIMING) $(UTILITIES)

EXECUTABLES = c-omp

# For debugging
SRC_FILES = $(shell find $(SRC_DIR) -name '*.c')
OBJ_FILES = $(patsubst $(SRC_DIR)/%.c, $(OBJ_DIR)/%.o, $(SRC_FILES))
$(info SRC_FILES = $(SRC_FILES))
$(info OBJ_FILES = $(OBJ_FILES))

all: $(addprefix $(BIN_DIR)/, $(EXECUTABLES))

$(info ALL = $(addprefix $(BIN_DIR)/, $(EXECUTABLES)))

# general file rule
$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	@mkdir -p $(@D)
	$(CC) $(CFLAGS) -c $< -o $@

c-omp: $(BIN_DIR)/c-omp
$(BIN_DIR)/c-omp: $(OBJ_DIR)/c-omp.o $(MODULES)
	@mkdir -p $(BIN_DIR)
	$(CC) $(CFLAGS) $^ -o $@

clean:
	rm -rf $(OBJ_DIR) $(BIN_DIR)